<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="61dp"
    android:background="#17181F"
    android:orientation="vertical">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/tv_branding"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="left|center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_thumbnail"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:src="@drawable/disc_mini" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="2dp"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:ellipsize="marquee"
                    android:focusable="true"
                    android:singleLine="true"
                    android:text="As long as you love me"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:textColor="@color/common_plus_signin_btn_text_dark_default"
                    android:textStyle="bold" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/subtitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:singleLine="true"
                        android:text="Backstreet boys"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/common_plus_signin_btn_text_dark_default"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/tv_minisong"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="right"
                        android:layout_weight="3"
                        android:ellipsize="marquee"
                        android:focusable="true"
                        android:gravity="right"
                        android:singleLine="true"
                        android:text="12/54"
                        android:textAppearance="?android:attr/textAppearanceSmall"
                        android:textColor="@color/common_plus_signin_btn_text_dark_default" />

                </LinearLayout>


            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="4"
            android:gravity="center|right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/prev"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_skip_previous_white_36dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/play_pause"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/uamp_ic_play_arrow_white_48dp"
                android:visibility="visible" />

            <ImageView
                android:id="@+id/next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:background="?selectableItemBackgroundBorderless"
                android:src="@drawable/ic_skip_next_white_36dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/listsong"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:src="@drawable/list"
                android:visibility="gone" />


        </LinearLayout>
    </LinearLayout>


</LinearLayout>
